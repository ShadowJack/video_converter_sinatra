%h2 All videos:
%table
  %thead
    %td Id
    %td Title
    %td flv
    %td mp4
    %td meta
    %td status
    %td
  %tbody
    - @videos.each do |video|
      %tr
        %td= video.id
        %td= video.title
        %td= video.flv
        %td= video.mp4
        %td
          %a{ href: url('/videos/' + video.id.to_s + '/meta') } meta
        %td= video.status
        %td
          %button{ type: 'button', onclick: "delete_video(#{video.id})"  } Delete
        
%p
  %a{ href: url('/videos/new') } Upload new video